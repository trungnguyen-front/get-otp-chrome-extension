{
  "manifest_version": 2,
  "name": "Captain Mochi",
  "author": "Nguyen Duc Trung - Kenny Nguyen",
  "version": "1.0.0",
  "description": "Utility for getting OTP",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["https://*/",  "storage"]
}
